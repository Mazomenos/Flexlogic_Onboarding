datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Individual EDI Element structure
model EDIElement {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Name    String
  Element String
  Type    String
  Min     Int
  Max     Int
  Version String
}

// Individual EDI Segment structure
model EDISegments {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Segment String
  Name    String
  Version String

  Elements Element[]
}

// Individual EDI Document structure
model EDITemplateDocuments {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Doc     DocType_enum
  Version String

  Segments Segment[]
}

enum DocType_enum {
  EDI_810 @map("810")
  EDI_850 @map("850")
  EDI_855 @map("855")
  EDI_856 @map("856")
}


model EDITPDocs {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  Segments Segment[]
}

type Element {
  Position    String
  Element     String
  Requirement String

  Type String?
  Min  Int?
  Max  Int?

  Conditions Json[] // Same structure as type Element
  Composites Json[] // Same structure as type Element
}

type Segment {
  Segment     String
  Requirement String
  Max         String

  Position Int?

  Segments Json[] // Same structure as type Segment
  Elements Element[]
}

// Trading Partner structure -----------------------
model TradingPartner {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  Name          String
  Initial850EDI String? // id of file if saved somewhere else
  Delimiters    Delimiters_enum[]
  Version       Version_enum
  EOL           EOL_enum[]
  isVisible     Boolean
  DocsRequired  TPDocRequired[]
}

enum Delimiters_enum {
  COMMA_SEMICOLON_STAR @map("[',' , ';' , '*']")
  PIPE_SEMICOLON_COMMA @map("['|' , ';' , ',']")
}

enum Version_enum {
  X12_4010 @map("X12_4010")
}

enum EOL_enum {
  TILDE   @map("~")
}

type TPDocRequired {
  idDoc           String // id from TPDocs
  Doc             DocType_enum
  instructionsPDF String
  isVisible       Boolean
  isRequired      Boolean
}

