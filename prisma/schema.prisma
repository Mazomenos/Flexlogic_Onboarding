// User structure -----------------------
model User {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  Partnerships Partnership[]
}

type Partnership {
  idPartner String
  Name      String
  Status    String
  Docs      UserDocs[]
}

type UserDocs {
  idDoc      String
  Doc        String
  DocFile    String? // id of file if saved somewhere else
  isRequired Boolean
  Status     String // Complete, validated & failed
  LogErrors  LogErrors[]
}

type LogErrors {
  Title       String
  Description String
  Position    String
  Type        String
}

