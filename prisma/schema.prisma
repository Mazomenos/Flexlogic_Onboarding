datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Individual EDI Element structure
model EDIElement {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Name    String
  Element String
  Type    String
  Min     Int
  Max     Int
  Version String
}

// Individual EDI Segment structure
model EDISegments {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Segment String
  Name    String
  Version String

  Elements Element[]
}

// Individual EDI Document structure
model EDITemplateDocuments {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Doc     Int
  Version String

  Segments Segment[]
}

model EDITPDocs {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  Segments Segment[]
}

type Element {
  Position    String
  Element     String
  Requirement String

  Type        String?
  Min   Int?
  Max   Int?

  Conditions Json[] // Same structure as type Element
  Composites Json[] // Same structure as type Element
}

type Segment {
  Segment     String
  Requirement String
  Max         String

  Position Int?

  Segments Json[] // Same structure as type Segment
  Elements Element[]
}

// User structure -----------------------
model User {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  Partnerships Partnership[]
}

type Partnership {
  idPartner String
  Docs      UserDocs[]
}

type UserDocs {
  Doc       String
  Status    String // Completed, in progress & failed
  DocFile   String? // id of file if saved somewhere else
  LogErrors LogErrors[]
}

type LogErrors {
  Position String
  Comments String
}

//--------------------------

// Trading Partner structure -----------------------
model TradingPartner {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  Name          String
  Initial850EDI String? // id of file if saved somewhere else
  DocsRequired  TPDocRequired[]
}

type TPDocRequired {
  idDoc     String // id from TPDocs
  Doc       String
  Version   String
  isVisible Boolean
}

